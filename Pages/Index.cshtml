@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["CreatedMessage"] != null)
{
    <div class="alert alert-success">@TempData["CreatedMessage"]</div>
}

@if (TempData["DeletedMessage"] != null)
{
    <div class="alert alert-danger">@TempData["DeletedMessage"]</div>
}



<h1>Users List</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Address</th>
            <th scope="col">Email Address</th>
            <th scope="col">Contact Number</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Address</td>
                <td>@user.EmailAddress</td>
                <td>@user.ContactNumber</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/Users/@user.Id" class="btn btn-primary">Edit</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Create" class="btn btn-primary">Create New User</a>