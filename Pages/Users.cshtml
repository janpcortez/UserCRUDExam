@page "{id:int}"
@model UserCRUDExam.Pages.UsersModel
@{
}

<h1>Update User</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="EditedUser.FirstName" placeholder="@Model.EditedUser.FirstName" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="EditedUser.LastName" placeholder="@Model.EditedUser.LastName" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="EditedUser.Address" placeholder="@Model.EditedUser.Address" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="EditedUser.EmailAddress" placeholder="@Model.EditedUser.EmailAddress" required>
        <span asp-validation-for="EditedUser.EmailAddress" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Contact Number</label>
        <input type="text" class="form-control" asp-for="EditedUser.ContactNumber" placeholder="@Model.EditedUser.ContactNumber" required>
    </div>
    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Delete</button>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
