@page
@model UserCRUDExam.Pages.CreateModel
@{
}

<h1>Add New User</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="AddNewUser.FirstName" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="AddNewUser.LastName" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="AddNewUser.Address" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="AddNewUser.EmailAddress" required>
        <span asp-validation-for="AddNewUser.EmailAddress" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Contact Number</label>
        <input type="text" class="form-control" asp-for="AddNewUser.ContactNumber" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
